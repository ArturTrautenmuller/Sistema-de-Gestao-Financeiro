
@{
    ViewBag.Title = "Cadastro";
}
@model SGF.Models.CadastroDados


<link rel="stylesheet" href="~/Content/Cadastro.css" />
<h2>Cadastro</h2>

@using (Html.BeginForm("CadastroFinal", "Home", FormMethod.Post))
{
    <label>Email:</label> @Html.TextBoxFor(m => m.email,new {@class = "textBox" })<br />
    <label> Nome: </label> @Html.TextBoxFor(m => m.nome, new { @class = "textBox" })<br />
    <label> Senha:</label> @Html.PasswordFor(m => m.senha, new { @class = "textBox" })<br />


    <input type="submit" value="Cadastar" class="submitButton"/>

}

@{ 
    if (Model.errorMessage != null) {
        <script src="~/Scripts/Grammar.js"></script>
        <script charset="utf-8">alert(fixGrammar("@Model.errorMessage"));</script>
    }

}