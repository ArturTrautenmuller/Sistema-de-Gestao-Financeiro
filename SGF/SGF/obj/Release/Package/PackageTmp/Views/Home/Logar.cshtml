
@{
    ViewBag.Title = "Logar";
}

@model SGF.Models.LoginDados
    <link rel="stylesheet" href="~/Content/Logar.css" />
<h2>Logar</h2>

@using (Html.BeginForm("Autenticar", "Home", FormMethod.Post))
{

    <label>Email:</label><br /> @Html.TextBoxFor(m => m.email,new {@class = "textBox" }) <br />
    <label>Senha:</label><br /> @Html.PasswordFor(m => m.senha,new {@class = "textBox" })<br />

    <input type="submit" value="Entrar" class="submitButton" />



}

@{ if (Model.errorMessage != null)
    {<script> alert("@Model.errorMessage");
        </script> }
}